<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>Latest</LangVersion>
		<NoWin32Manifest>true</NoWin32Manifest>
		<RunPostBuildEvent>Always</RunPostBuildEvent>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
		<PackageReference Include="System.IO.FileSystem.AccessControl" Version="5.0.0" />
		<PackageReference Include="System.Security.AccessControl" Version="6.0.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\..\MTGOSDK.Win32\MTGOSDK.Win32.csproj" />
		<ProjectReference Include="..\ScubaDiver.API\ScubaDiver.API.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Microsoft.CSharp">
			<HintPath>..\..\..\..\Program Files (x86)\Reference Assemblies\Microsoft\Framework\.NETFramework\v4.8\Microsoft.CSharp.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Properties\Resources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Resources.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Properties\Resources.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>Resources.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

  <!-- Configures build-time dependencies for MSBuild -->
  <ItemGroup>
    <ProjectReference Include="..\ScubaDiver\ScubaDiver.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
    <ProjectReference Include="..\..\..\SharpNeedle\src\Bootstrapper\Bootstrapper_x64.vcxproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
    <ProjectReference Include="..\..\..\SharpNeedle\src\Bootstrapper\Bootstrapper.vcxproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
    <ProjectReference Include="..\..\..\SharpNeedle\src\Launcher\Launcher_x64.vcxproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
    <ProjectReference Include="..\..\..\SharpNeedle\src\Launcher\Launcher.vcxproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
  </ItemGroup>

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
		<Exec Command="xcopy /Y &quot;$(SolutionDir)\dist\$(Configuration)\Win32\*.exe&quot; &quot;$(ProjectDir)\Resources&quot;&#xD;&#xA;xcopy /Y &quot;$(SolutionDir)\dist\$(Configuration)\Win32\*.dll&quot; &quot;$(ProjectDir)\Resources&quot;&#xD;&#xA;xcopy /Y &quot;$(SolutionDir)\dist\$(Configuration)\x64\*.exe&quot; &quot;$(ProjectDir)\Resources&quot;&#xD;&#xA;xcopy /Y &quot;$(SolutionDir)\dist\$(Configuration)\x64\*.dll&quot; &quot;$(ProjectDir)\Resources&quot;&#xD;&#xA;xcopy /Y &quot;$(SolutionDir)\dist\$(Configuration)\*.dll&quot; &quot;$(ProjectDir)\Resources&quot;" />
	</Target>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="powershell &quot;Get-ChildItem -Path '$(ProjectDir)\Resources' -Exclude '*READ_ME*' | Set-Content -Value 'dummy'&quot;" />
	</Target>

</Project>
